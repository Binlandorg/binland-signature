<mjml>
    <mj-head>
        <mj-style inline="inline">
            .logo{
                text-align: left;
            }

            .name{
                padding: 0px 25px !important;
                font-weight: 800;
            }

            .service{
                font-weight: 800;
            }

            .important{
                opacity: 0.5;
            }

            .social-text{
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            a{
                text-decoration: none;
                color: black;
            }

            img{
